{
  "env": {
    "browser": true,
    "es6": true,
    "greasemonkey": true,
    "jquery": true,
    "webextensions": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "no-empty": "off",
    "no-console": "off",
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-fallthrough": "off"}
}